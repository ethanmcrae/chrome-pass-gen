{
  "manifest_version": 3,
  "name": "Random Password Generator",
  "version": "1.1",
  "description": "A simple and modern random password generator.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["clipboardWrite", "tabs", "storage", "history"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Password Generator",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'"
  },
  "style-src": ["'self'", "sha256-X7ZiybyCHKonP6fXWsucK0F4lA8X3gd89fO2g+9go60="]
}
